{
	"compilerOptions": {
		"outDir": "../../build-server",
		"module": "commonjs",
		"target": "ES6",
		"lib": ["esnext"],
		"allowJs": false,
		"skipLibCheck": true,
		"esModuleInterop": true,
		"allowSyntheticDefaultImports": true,
		"strict": true,
		"noImplicitAny": false,
		"strictPropertyInitialization": false,
		"forceConsistentCasingInFileNames": true,
		"moduleResolution": "node",
		"resolveJsonModule": true,
		"isolatedModules": true
	},
	"exclude": ["node_modules", "build", "build-server"],
	"include": [".", "../@types/common.d.ts"]
}
